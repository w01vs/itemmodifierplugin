$C = "Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
  Anchor: (Width: 300, Height: 400);

  #Title {
    Group {
      $C.@Title {
        @Text = "Pick an item to modify";
      }
    }
  }

  Group #ModifierContent {
  LayoutMode: Right;
  Padding: (Left: 10, Top: 40, Right: 10);

      Group #Content {
        Group {
          LayoutMode: Center;
          Padding: (Right: 15, Bottom: 5);

          Label {
            Text: "Modifiers";
            Style: (RenderBold: true);
          }
        }

        Group #ElementList {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
        }
      }
    }
}

$C.@BackButton {}
